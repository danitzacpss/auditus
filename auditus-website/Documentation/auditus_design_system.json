        "primary": {
          "50": "#0c4a6e",
          "100": "#075985",
          "200": "#0369a1",
          "300": "#0284c7",
          "400": "#0ea5e9",
          "500": "#38bdf8",
          "600": "#7dd3fc",
          "700": "#bae6fd",
          "800": "#e0f2fe",
          "900": "#f0f9ff"
        },
        "secondary": {
          "50": "#831843",
          "100": "#9d174d",
          "200": "#be185d",
          "300": "#db2777",
          "400": "#ec4899",
          "500": "#f472b6",
          "600": "#f9a8d4",
          "700": "#fbcfe8",
          "800": "#fce7f3",
          "900": "#fdf2f8"
        },
        "accent": {
          "turquoise": "#22d3ee",
          "lightPink": "#be185d",
          "lavender": "#6366f1"
        },
        "neutral": {
          "white": "#111827",
          "gray50": "#1f2937",
          "gray100": "#374151",
          "gray200": "#4b5563",
          "gray300": "#6b7280",
          "gray400": "#9ca3af",
          "gray500": "#d1d5db",
          "gray600": "#e5e7eb",
          "gray700": "#f3f4f6",
          "gray800": "#f9fafb",
          "gray900": "#ffffff"
        }
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "Poppins, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "secondary": "Lato, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "accent": "Montserrat, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
      },
      "scales": {
        "hero": {
          "fontSize": "3.5rem",
          "lineHeight": "1.1",
          "fontWeight": "700",
          "fontFamily": "primary",
          "letterSpacing": "-0.02em"
        },
        "h1": {
          "fontSize": "2.5rem",
          "lineHeight": "1.2",
          "fontWeight": "600",
          "fontFamily": "primary",
          "letterSpacing": "-0.01em"
        },
        "h2": {
          "fontSize": "2rem",
          "lineHeight": "1.3",
          "fontWeight": "600",
          "fontFamily": "primary"
        },
        "h3": {
          "fontSize": "1.5rem",
          "lineHeight": "1.4",
          "fontWeight": "500",
          "fontFamily": "secondary"
        },
        "body": {
          "fontSize": "1rem",
          "lineHeight": "1.6",
          "fontWeight": "400",
          "fontFamily": "secondary"
        },
        "small": {
          "fontSize": "0.875rem",
          "lineHeight": "1.5",
          "fontWeight": "400",
          "fontFamily": "secondary"
        },
        "caption": {
          "fontSize": "0.75rem",
          "lineHeight": "1.4",
          "fontWeight": "500",
          "fontFamily": "accent",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em"
        }
      }
    },

    "spacing": {
      "scale": "8px",
      "values": {
        "xs": "0.5rem",
        "sm": "1rem", 
        "md": "1.5rem",
        "lg": "2rem",
        "xl": "3rem",
        "2xl": "4rem",
        "3xl": "6rem",
        "4xl": "8rem"
      }
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.375rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "2xl": "1.5rem",
      "3xl": "2rem",
      "full": "9999px"
    },

    "shadows": {
      "light": {
        "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
        "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
        "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
        "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
      },
      "dark": {
        "sm": "0 1px 2px 0 rgb(0 0 0 / 0.3)",
        "md": "0 4px 6px -1px rgb(0 0 0 / 0.3), 0 2px 4px -2px rgb(0 0 0 / 0.3)",
        "lg": "0 10px 15px -3px rgb(0 0 0 / 0.3), 0 4px 6px -4px rgb(0 0 0 / 0.3)",
        "xl": "0 20px 25px -5px rgb(0 0 0 / 0.3), 0 8px 10px -6px rgb(0 0 0 / 0.3)"
      }
    },

    "components": {
      "button": {
        "base": {
          "borderRadius": "xl",
          "fontWeight": "500",
          "transition": "all 0.2s ease-in-out",
          "cursor": "pointer",
          "display": "inline-flex",
          "alignItems": "center",
          "justifyContent": "center",
          "gap": "0.5rem"
        },
        "variants": {
          "primary": {
            "light": {
              "backgroundColor": "primary.500",
              "color": "white",
              "hover": {
                "backgroundColor": "primary.600"
              }
            },
            "dark": {
              "backgroundColor": "primary.400",
              "color": "gray900",
              "hover": {
                "backgroundColor": "primary.300"
              }
            }
          },
          "secondary": {
            "light": {
              "backgroundColor": "white",
              "color": "primary.600",
              "border": "1px solid primary.200",
              "hover": {
                "backgroundColor": "primary.50"
              }
            },
            "dark": {
              "backgroundColor": "gray800",
              "color": "primary.400",
              "border": "1px solid primary.800",
              "hover": {
                "backgroundColor": "gray700"
              }
            }
          }
        },
        "sizes": {
          "sm": {
            "padding": "0.5rem 1rem",
            "fontSize": "0.875rem"
          },
          "md": {
            "padding": "0.75rem 1.5rem",
            "fontSize": "1rem"
          },
          "lg": {
            "padding": "1rem 2rem",
            "fontSize": "1.125rem"
          }
        }
      },

      "card": {
        "base": {
          "borderRadius": "2xl",
          "padding": "1.5rem",
          "transition": "all 0.3s ease"
        },
        "variants": {
          "elevated": {
            "light": {
              "backgroundColor": "white",
              "boxShadow": "lg",
              "hover": {
                "boxShadow": "xl",
                "transform": "translateY(-2px)"
              }
            },
            "dark": {
              "backgroundColor": "gray800",
              "boxShadow": "lg",
              "hover": {
                "boxShadow": "xl",
                "transform": "translateY(-2px)"
              }
            }
          },
          "gradient": {
            "light": {
              "background": "linear-gradient(135deg, primary.400 0%, secondary.400 100%)",
              "color": "white"
            },
            "dark": {
              "background": "linear-gradient(135deg, primary.600 0%, secondary.600 100%)",
              "color": "gray900"
            }
          },
          "glass": {
            "light": {
              "backgroundColor": "rgba(255, 255, 255, 0.8)",
              "backdropFilter": "blur(10px)",
              "border": "1px solid rgba(255, 255, 255, 0.2)"
            },
            "dark": {
              "backgroundColor": "rgba(31, 41, 55, 0.8)",
              "backdropFilter": "blur(10px)",
              "border": "1px solid rgba(75, 85, 99, 0.2)"
            }
          }
        }
      },

      "input": {
        "base": {
          "borderRadius": "lg",
          "padding": "1rem",
          "fontSize": "1rem",
          "border": "2px solid transparent",
          "transition": "all 0.2s ease-in-out",
          "width": "100%"
        },
        "states": {
          "light": {
            "default": {
              "backgroundColor": "gray50",
              "color": "gray900",
              "borderColor": "gray200"
            },
            "focus": {
              "borderColor": "primary.400",
              "backgroundColor": "white",
              "outline": "none"
            }
          },
          "dark": {
            "default": {
              "backgroundColor": "gray800",
              "color": "gray100",
              "borderColor": "gray600"
            },
            "focus": {
              "borderColor": "primary.400",
              "backgroundColor": "gray700",
              "outline": "none"
            }
          }
        }
      },

      "icon": {
        "sizes": {
          "sm": "1rem",
          "md": "1.5rem",
          "lg": "2rem",
          "xl": "3rem"
        },
        "variants": {
          "contained": {
            "light": {
              "backgroundColor": "primary.100",
              "color": "primary.600",
              "borderRadius": "lg",
              "padding": "0.75rem"
            },
            "dark": {
              "backgroundColor": "primary.900",
              "color": "primary.300",
              "borderRadius": "lg",
              "padding": "0.75rem"
            }
          }
        }
      },

      "navigation": {
        "header": {
          "light": {
            "backgroundColor": "rgba(255, 255, 255, 0.95)",
            "backdropFilter": "blur(10px)",
            "borderBottom": "1px solid gray.100"
          },
          "dark": {
            "backgroundColor": "rgba(17, 24, 39, 0.95)",
            "backdropFilter": "blur(10px)",
            "borderBottom": "1px solid gray.800"
          }
        },
        "mobile": {
          "fixedCTA": {
            "position": "fixed",
            "bottom": "0",
            "left": "0",
            "right": "0",
            "padding": "1rem",
            "zIndex": "50"
          }
        }
      }
    },

    "layouts": {
      "hero": {
        "structure": "split-screen with text-left, visual-right",
        "textAlignment": "left",
        "padding": "4xl",
        "minHeight": "80vh",
        "background": "gradient or solid with subtle patterns"
      },
      "services": {
        "structure": "4-column grid on desktop, 2-column on tablet, 1-column on mobile",
        "cardSpacing": "lg",
        "iconPosition": "top-center",
        "textAlignment": "center"
      },
      "testimonials": {
        "structure": "horizontal scroll cards",
        "cardWidth": "300px",
        "gap": "md"
      },
      "footer": {
        "structure": "multi-column links with social icons",
        "padding": "2xl"
      }
    },

    "animations": {
      "transitions": {
        "fast": "150ms ease-in-out",
        "normal": "250ms ease-in-out",
        "slow": "350ms ease-in-out"
      },
      "hover": {
        "lift": "translateY(-2px)",
        "scale": "scale(1.02)",
        "fade": "opacity 0.8"
      }
    },

    "patterns": {
      "medical": {
        "heroStructure": "Large headline + descriptive text + primary CTA + secondary features grid",
        "trustSignals": "Professional imagery, certifications, testimonials, statistics",
        "ctaPlacement": "Hero section, service cards, sticky mobile bar",
        "iconStyle": "Outlined medical icons in primary color",
        "imagery": "Clean, professional photos with medical context"
      },
      "responsive": {
        "breakpoints": {
          "sm": "640px",
          "md": "768px", 
          "lg": "1024px",
          "xl": "1280px",
          "2xl": "1536px"
        },
        "mobileFirst": true,
        "containerMaxWidth": "1200px"
      }
    },

    "accessibility": {
      "colorContrast": "WCAG AA compliant",
      "focusStates": "Visible focus rings with primary color",
      "touchTargets": "Minimum 44px for interactive elements",
      "typography": "Readable font sizes with good line height"
    },

    "tonality": {
      "voice": "Professional, empathetic, trustworthy, approachable",
      "microcopy": {
        "buttons": "Action-oriented and clear (e.g., 'Schedule Appointment', 'Learn More')",
        "forms": "Helpful and reassuring",
        "errors": "Empathetic and solution-focused",
        "success": "Encouraging and next-step oriented"
      }
    }
  }
}